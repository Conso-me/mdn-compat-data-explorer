<div class="container">
  <div class="row py-4">
    <%= render 'features_navigation' %>
  </div>

  <% if @search %>
    <%= form_tag("/features/search", method: "get") do %>
      <%= text_field_tag(:query, params['query'], placeholder: "Search") %>

      <% @categories.each do |key, value| %>
        <%= check_box_tag(key, 1, params[key.to_s]) %>
        <%= label_tag(key, value) %>
      <% end %>

      <%= submit_tag("Search", class: "btn btn-default") %>
    <% end %>
  <% end %>

  <div class="row">
    <h1><%= title %></h1>
  </div>

  <div class="row">
    <% unless @search_page %>
      <p>Features tracked: <%= @feature_count %></p>
    <% end %>

    <% unless defined?(include_node) %>
      <% include_node = false %>
    <% end %>
    <%= render 'features_list',
        features: @features,
        browsers: @browsers,
        include_node: include_node %>
  </div>
</div>

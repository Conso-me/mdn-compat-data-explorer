<div class="container">
  <div class="row py-4">
    <div class="col-12">
      <h1>Graphs</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="card-columns">
        <% [:chrome, :firefox].each do |browser| %>
          <div class="card">
            <div class="card-body">
              <%= pie_chart(
                {
                  "Unknown" => @browser_stats[browser][:unknown],
                  "True" => @browser_stats[browser][:yes],
                  "False" => @browser_stats[browser][:no],
                  "No data" => @browser_stats[browser][:no_data]
                },
                title: "#{browser}",
                donut: true
              ) %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

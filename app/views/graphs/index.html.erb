<div class="container">
  <div class="row py-4">
    <div class="col-12">
      <h1>Graphs</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="card-columns">
        <div class="card">
          <div class="card-body">
            <%= pie_chart(
              {
                "Unknown" => @chrome_stats[:unknown],
                "True" => @chrome_stats[:yes],
                "False" => @chrome_stats[:no]
              },
              title: "Chrome",
              donut: true
            ) %>
          </div>
        </div>
        <div class="card">
          <div class="card-body">
            <%= pie_chart(
              {
                "Unknown" => @firefox_stats[:unknown],
                "True" => @firefox_stats[:yes],
                "False" => @firefox_stats[:no]
              },
              title: "Firefox",
              donut: true
            ) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
